      if (!q) return;

      document.getElementById('fakeResults').innerHTML = `
        <div class="results-title">About 3,240,000 results for "${q}"</div>
        <div class="result">
          <a href="#">${q} â€“ Official Site</a>
          <div class="url">www.example.com</div>
          <div class="desc">Find information related to ${q}. Updated results and resources.</div>
        </div>
        <div class="result">
          <a href="#">Best ${q} Reviews</a>
          <div class="url">www.reviews.com</div>
          <div class="desc">Compare top results and guides for ${q}.</div>
        </div>
      `;

      document.getElementById('fakeWrapper').style.display = 'block';
    }
  </script>

